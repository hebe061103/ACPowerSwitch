<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#CADE0B">

    <TextView
        android:id="@+id/m_year"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:hint="year:"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />

    <TextView
        android:id="@+id/m_time"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:hint="time:"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_year"
        tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />

    <TextView
        android:id="@+id/m_value"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:hint="value:"
        android:textSize="10sp"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/m_time"
        tools:ignore="HardcodedText,SmallSp,TextContrastCheck" />
</androidx.constraintlayout.widget.ConstraintLayout>